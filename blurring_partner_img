import numpy as np
import cv2 as cv
from matplotlib import pyplot as plt
import os
import PIL

script_dir = os.path.dirname(__file__)
SCRIPT_DIR = os.path.abspath(script_dir)
img =  os.path.join(SCRIPT_DIR, "partner.JPG")

img = cv.imread(img)
median_blur = cv.medianBlur(img, 251)
gaussian_blur = cv.GaussianBlur(img, (251, 251), 0)
average_blur = cv.blur(img, (250, 250))
bilateral_blur = cv.bilateralFilter(img, 15, 75, 75)

